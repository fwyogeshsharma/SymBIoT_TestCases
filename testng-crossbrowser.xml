<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SymBIoT Cross-Browser Test Suite" verbose="2" thread-count="3" parallel="tests">

    <listeners>
        <listener class-name="com.symbiot.listeners.TestListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <!-- Chromium Browser Tests -->
    <test name="Chromium Tests">
        <parameter name="browser" value="chromium"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.symbiot.tests.ApplicationLaunchTest"/>
            <class name="com.symbiot.tests.LoginTest"/>
            <class name="com.symbiot.tests.UIValidationTest"/>
        </classes>
    </test>

    <!-- Firefox Browser Tests -->
    <test name="Firefox Tests">
        <parameter name="browser" value="firefox"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.symbiot.tests.ApplicationLaunchTest"/>
            <class name="com.symbiot.tests.LoginTest"/>
            <class name="com.symbiot.tests.UIValidationTest"/>
        </classes>
    </test>

    <!-- WebKit Browser Tests -->
    <test name="WebKit Tests">
        <parameter name="browser" value="webkit"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.symbiot.tests.ApplicationLaunchTest"/>
            <class name="com.symbiot.tests.LoginTest"/>
            <class name="com.symbiot.tests.UIValidationTest"/>
        </classes>
    </test>

</suite>